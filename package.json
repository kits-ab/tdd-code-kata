{
    "scripts": {
        "test": "jest",
        "coverage": "jest --coverage",
        "watch": "jest --watch-all"
    },
    "devDependencies": {
        "@types/jest": "26.0.21",
        "jest": "26.6.3",
        "ts-jest": "26.5.4",
        "typescript": "4.2.3",
        "ts-node": "9.1.1"
    },
    "workspaces": [
        "src/first",
        "src/fizzbuzz",
        "template"
    ],
    "private": true,
    "jest": {
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": ".*\\.(test|spec)?\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
