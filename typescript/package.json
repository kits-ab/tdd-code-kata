{
    "scripts": {
        "test": "jest",
        "coverage": "jest --coverage",
        "watch": "jest --watch-all",
        "clean": "rm -rf node_modules",
        "clean-all": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +"
    },
    "devDependencies": {
        "@types/jest": "26.0.21",
        "jest": "26.6.3",
        "prettier": "2.2.1",
        "ts-jest": "26.5.4",
        "ts-node": "9.1.1",
        "typescript": "4.2.3"
    },
    "jest": {
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": ".*\\.(test|spec)?\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 2,
        "singleQuote": true
    }
}
